@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title-Front"] = "Về chúng tôi";
}

@section Styles {
    <style>

    </style>
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background" style="background-image: url(/assets/img/page-title-bg.jpg);">
        <div class="container position-relative">
            <h1>Về chúng tôi</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">Về chúng tôi</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Project Details Section -->
    <section id="project-details" class="project-details section">

        <div class="container" data-aos="fade-up">

            <div class="portfolio-details-slider swiper init-swiper">

                <div class="swiper-wrapper align-items-center">

                    <div class="swiper-slide" id="image">
                    </div>

                </div>
            </div>

            <div class="row justify-content-between gy-4 mt-4">

                <div class="col-lg-12" data-aos="fade-up">
                    <div class="portfolio-description">
                        <h2 id="title"></h2>
                        <p id="detail"></p>

                    </div>
                </div>

            </div>

        </div>

    </section><!-- /Project Details Section -->

</main>

@section Scripts {
    <script>
        $(function () {
            getVeChungToi()
        })

        function getVeChungToi(){
            $.ajax({
                url: '/Front/GetVeChungToi',
                type: 'GET',
                headers: {

                },
                data: {
                    
                },
                success: function (res) {
                    let data = res.data
                    let urlList = data[0].file_name.split('.')
                    let extensionFile = urlList[urlList.length - 1]
                    let file_url = data[0].file_url

                    $(`#title`).html(data[0].title)
                    $(`#detail`).html(data[0].detail)
                    $(`#image`).html(`<img src="data:image/${extensionFile};base64, ${file_url}" class="img-fluid" alt="">`)
                },
                error: function (err) {
                    alert('An error occurred. ' + err.responseText);
                }
            });
        }

    </script>
}
