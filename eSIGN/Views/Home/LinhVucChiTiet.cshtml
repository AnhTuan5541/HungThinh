@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@section Styles {
    <style>

    </style>
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background" style="background-image: url(/assets/img/footer-bg.jpg);">
        <div class="container position-relative">
            <h1>Lĩnh vực hoạt động</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">Lĩnh vực hoạt động</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Project Details Section -->
    <section id="project-details" class="project-details section">

        <div class="container" data-aos="fade-up">

            <div class="row justify-content-between gy-4 mt-4">

                <div class="col-lg-12" data-aos="fade-up">
                    <div class="portfolio-description">
                        <h2 id="title"></h2>
                        <p id="detail"></p>

                    </div>
                </div>

            </div>

        </div>

    </section><!-- /Project Details Section -->

</main>
@section Scripts {
    <script>
        const url = new URL(window.location.href);
        const id = url.searchParams.get('id');
        $(function () {
            getLinhVucChiTiet(id)
        })

        function getLinhVucChiTiet(idItem){
            console.log(idItem)
            $.ajax({
                url: '/Front/GetLinhVucChiTiet',
                type: 'GET',
                headers: {
                    
                },
                data: {
                    id: idItem
                },
                success: function (res) {
                    let data = res.data
                    
                    $(`#title`).html(data[0].linh_vuc)
                    $(`#detail`).html(data[0].detail)
                },
                error: function (err) {
                    alert('An error occurred. ' + err.responseText);
                }
            });
        }

    </script>
}