        function filterApplication() {
            $.ajax({
                url: '/Application/GetApplicationByValueSign',
                type: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + getCookie('esign_token')
                },
                data: {
                    valueSign: _valueSign,
                    timeSpan: $('#filter').val()
                },
                success: function (res) {
                    dataApplication = res.data
                    setupPagination(dataApplication, 1, 0);
                    if (_valueSign == 0) $('#title-table').html('Application: All')
                    if (_valueSign == 1) $('#title-table').html('Application: Waiting')
                    if (_valueSign == 2) $('#title-table').html('Application: Research')
                    if (_valueSign == 3) $('#title-table').html('Application: Approval')
                    if (_valueSign == 4) $('#title-table').html('Application: Reject')
                    if (_valueSign == 5) $('#title-table').html('Application: Publish')
                    if (_valueSign == 7) $('#title-table').html('Application: Develop')
                    if (_valueSign == 8) $('#title-table').html('Application: UAT')
                    if (_valueSign == 9) $('#title-table').html('Application: Resolved')
                },
                error: function (err) {
                    if (err.status == 401) {
                        logout();
                    }
                    else {
                        alert('An error occurred. ' + err.responseText);
                    }
                }
            });
        }

        function exportApplication() {
            $.ajax({
                url: '/Admin/Export',
                type: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + getCookie('esign_token')
                },
                data: {
                    valueSign: _valueSign,
                    timeSpan: $('#filter').val()
                },
                success: function (res) {
                    let base64Data = res.data;

                    // Tạo link download
                    let downloadLink = document.createElement("a");
                    downloadLink.href = "data:application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;base64," + base64Data;
                    downloadLink.download = "Application.xlsx"; // Đặt tên file tải xuống

                    // Click link để download
                    downloadLink.click();
                },
                error: function (err) {
                    if (err.status == 401) {
                        logout();
                    }
                    else {
                        alert('An error occurred. ' + err.responseText);
                    }
                }
            });
        }

        function search() {
            let search = document.getElementById("search");
            let filteredData = dataApplication.filter(item => item.application_no.includes(search.value));
            setupPagination(filteredData, 0, 0)
        }

    </script>
