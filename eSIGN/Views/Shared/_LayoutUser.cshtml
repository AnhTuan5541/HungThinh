    <script>
        $(function () {
            let currentUrl = window.location.pathname;

            switch(currentUrl){
                case "/":
                    $('#nav-front-home').addClass('active');
                    break;
                case "/ve-chung-toi":
                    $('#nav-front-ve-chung-toi').addClass('active');
                    break;
                case "/linh-vuc-hoat-dong":
                case "/linh-vuc/chi-tiet":
                    $('#nav-front-linh-vuc-hoat-dong').addClass('active');
                    break;
                case "/du-an":
                case "/du-an/chi-tiet":
                    $('#nav-front-du-an').addClass('active');
                    break;
                case "/nang-luc":
                    $('#nav-front-nang-luc').addClass('active');
                    break;
                case "/tin-tuc":
                case "/tin-tuc/chi-tiet":
                    $('#nav-front-tin-tuc').addClass('active');
                    break;
                case "/lien-he":
                    $('#nav-front-lien-he').addClass('active');
                    break;
                default:
                    break;
            }
            getFooter()
            getLienHeFooter()
        })
        function getFooter(){
            $.ajax({
                url: '/Front/GetFooter',
                type: 'GET',
                headers: {

                },
                data: { },
                success: function (res) {
                    let data = res.data

                    $('#x').attr('href', data[0].x);
                    $('#facebook').attr('href', data[0].facebook);
                    $('#instagram').attr('href', data[0].instagram);
                    $('#linkedlin').attr('href', data[0].linkedlin);
                },
                error: function (err) {
                    alert('An error occurred. ' + err.responseText);
                }
            });
        }
        function getLienHeFooter(){
            $.ajax({
                url: '/Front/GetLienHe',
                type: 'GET',
                headers: {

                },
                data: { },
                success: function (res) {
                    let data = res.data
                    let htmlData = ``

                    $(`#footer_dia_chi`).html(data[0].dia_chi)
                    $(`#footer_dien_thoai`).html(data[0].dien_thoai)
                    $(`#footer_email`).html(data[0].email)
                },
                error: function (err) {
                    alert('An error occurred. ' + err.responseText);
                }
            });
        }
        function truncateString(str, maxLength) {
            if (str.length > maxLength) {
                return str.substring(0, maxLength) + '...';
            }
            return str;
        }
    </script>

